---
import { AstroFont } from 'astro-font';
import { Icon } from 'astro-icon/components';
import BaseHead from '../components/BaseHead.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'blog'>['data'];

const { title, readTime, pubDate, tags } = Astro.props;
const formattedDate = pubDate.toLocaleDateString('en-US', {
  month: 'long',
  year: 'numeric',
});
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

    <AstroFont
      config={[
        {
          name: 'Vietnam',
          src: [],
          googleFontsURL:
            'https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap',
          preload: true,
          display: 'swap',
          selector: 'body',
          fallback: 'sans-serif',
        },
      ]}
    />
  </head>

  <body class="">
    <!-- THEME SCRIPT (CLIENT-SIDE ONLY) -->
    <script is:inline>
      const root = document.documentElement;
      const stored = localStorage.getItem('theme');

      if (stored === 'dark') {
        root.classList.add('dark');
      }

      window.toggleTheme = () => {
        root.classList.toggle('dark');
        localStorage.setItem(
          'theme',
          root.classList.contains('dark') ? 'dark' : 'light'
        );
      };

      window.goBack = () => {
        if (window.history.length > 1) {
          window.history.back();
        } else {
          window.location.href = '/';
        }
      };
    </script>

    <!-- Toggle button (example) -->
    <section class="max-w-2xl mx-auto space-y-8">
      <div class="pt-10 flex items-center justify-between">
        <button
          onclick="goBack()"
          class="flex items-center gap-2 text-sm text-muted-foreground cursor-pointer group/back"
        >
          <Icon
            name="arrowRight"
            class="rotate-180 group-hover/back:rotate-0 transition-transform duration-300"
          />
          Back to blogs
        </button>
        <button
          onclick="
          toggleTheme()"
          class="top-2 right-2 border px-3 py-3 rounded-full text-sm"
        >
          <Icon name="sun" />
        </button>
      </div>
      <div>
        <h2 class="text-5xl font-thin mb-4">{title}</h2>
        <div class="flex items-center text-xs text-muted-foreground gap-4">
          <span class="flex items-center gap-2 font-mono">
            <Icon name="calendar" class="h-3 w-3" />
            {formattedDate}
          </span>
          <span class="flex items-center gap-1 font-mono">
            <!-- //dot -->
            <div class="w-1 h-1 bg-muted-foreground rounded-full"></div>
            {readTime} read
          </span>
          <span class="flex items-center gap-1 font-mono">
            <!-- //dot -->
            <div class="w-1 h-1 bg-muted-foreground rounded-full"></div>
            Milan Praz
          </span>
        </div>
        <!-- <p class="text-muted-foreground text-sm font-light"></p> -->
      </div>
    </section>

    <!-- Background wrapper -->
    <div class="bg-background max-w-2xl mx-auto min-h-screen">
      <slot />
    </div>
  </body>
</html>
