---
import { Icon } from 'astro-icon/components';
import Capsule from './home/Capsule.astro';

interface Props {
  title: string;
  year: string | number;
  description: string;
  tech: string[];
  href?: string;
}

const { title, year, description, tech, href = '#' } = Astro.props;
---

<a
  href={href}
  class="group block rounded-2xl border border-border bg-background
         px-6 py-5 transition-all duration-300
         hover:bg-muted/40 hover:border-muted-foreground/30"
>
  <!-- Header -->
  <div class="flex items-start justify-between gap-4">
    <div>
      <h3 class="text-lg font-medium text-foreground leading-snug">
        {title}
      </h3>
      <p class="text-xs text-muted-foreground mt-1">{year}</p>
    </div>

    <!-- Arrow -->
    <Icon
      name="arrowRight"
      class="h-4 w-4 text-muted-foreground transition-transform duration-300 group-hover:translate-x-1"
    />
  </div>

  <!-- Description -->
  <p class="mt-4 text-sm text-muted-foreground leading-relaxed max-w-3xl">
    {description}
  </p>

  <!-- Tech stack -->
  <div class="mt-4 flex flex-wrap gap-2">
    {tech.map((item) => <Capsule>{item}</Capsule>)}
  </div>
</a>
