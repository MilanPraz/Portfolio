---
interface Props {
  label: string;
  class?: string;
}

const { label, class: className = '' } = Astro.props;
---

<div class={`relative inline-flex group ${className}`}>
  <!-- Trigger (wrapped content) -->
  <slot />

  <!-- Tooltip -->
  <div
    class="pointer-events-none absolute bottom-full left-1/2 -translate-x-1/2 mb-3
           opacity-0 scale-95
           transition-all duration-200 ease-out
           group-hover:opacity-100 group-hover:scale-100"
  >
    <div
      class="relative whitespace-nowrap rounded-md
             bg-primary text-primary-foreground
             px-3 py-1.5 text-sm font-medium shadow-lg"
    >
      {label}

      <!-- Arrow (bottom center) -->
      <span
        class="absolute left-1/2 top-9 -translate-x-1/2
               border-4 border-transparent border-t-primary"
      ></span>
    </div>
  </div>
</div>
