---
export interface Props {
  title?: string;
  link?: string;
  className?: string;
}
const { title, link, className } = Astro.props;
---

<button
  aria-label={title}
  class={`text-xs font-mono text-muted-foreground px-4 py-1 bg-secondary border-dashed border hover:border-muted-foreground rounded-full ${className}`}
>
  {
    link ? (
      <a href={link || '#'}>
        <slot />
      </a>
    ) : (
      <span>
        <slot />
      </span>
    )
  }
</button>
