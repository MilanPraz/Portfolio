---
import { Icon } from 'astro-icon/components';
import Capsule from './home/Capsule.astro';
import Link from './home/Link.astro';
import TooltipWrapper from './home/TooltipWrapper.astro';

const techStacks = [
  'Full-Stack Development',
  'Nextjs / Typescript',
  'Golang / Node.js',
  'PostgreSQL',
  'API Design & Development',
  'Deployment & CI/CD',
  'Cloud & Devops',
];
---

<section class="min-h-dvh flex items-center justify-center px-4 sm:px-6">
  <div class="max-w-3xl mx-auto grid grid-cols-1 lg:grid-cols-12 gap-10">
    <!-- LEFT -->
    <div class="lg:col-span-7 space-y-6 sm:space-y-8">
      <div class="space-y-2">
        <h6
          class="text-xs sm:text-sm text-muted-foreground tracking-wide font-mono"
        >
          SOFTWARE DEVELOPER / 2026
        </h6>

        <h2 class="text-4xl sm:text-5xl lg:text-6xl text-muted-foreground">
          <span class="text-foreground"> Milan </span>
          Praz
        </h2>
      </div>

      <p
        class="text-base sm:text-lg lg:text-xl text-muted-foreground leading-relaxed"
      >
        Software Developer building fast and scalable digital products using
        <span class="text-foreground"> Next.js </span>,
        <span class="text-foreground"> TypeScript </span>,
        <span class="text-foreground"> Node.js </span>
        and
        <span class="text-foreground"> PostgreSQL </span>
        <a class="underline text-sm block mt-2">Learn more about me.</a>
      </p>

      <!-- Hire status -->
      <div
        class="flex flex-wrap items-center gap-3 text-xs text-muted-foreground"
      >
        <div class="flex items-center gap-1">
          <div class="h-2 w-2 bg-green-700 animate-pulse rounded-full"></div>
          <p>Software Developer for Hire</p>
        </div>
        <p>Nepal</p>
      </div>

      <!-- Actions -->
      <div class="flex flex-wrap items-center gap-3">
        <TooltipWrapper label="resume">
          <Link href="/resume" variant="primary">
            <Icon name="doc" size={18} />
            resume
          </Link>
        </TooltipWrapper>

        <TooltipWrapper label="projects">
          <Link href="/projects" variant="secondary">
            <Icon name="gi" size={18} class="text-white fill-white" />
            projects
          </Link>
        </TooltipWrapper>

        <TooltipWrapper label="read blogs">
          <Link href="/blog" variant="stone">
            <Icon name="blogs" size={18} />
            read blogs
          </Link>
        </TooltipWrapper>
      </div>
    </div>

    <!-- RIGHT -->
    <div class="lg:col-span-5 space-y-8">
      <h3 class="text-sm font-mono text-muted-foreground">WHAT I DO</h3>

      <div class="space-y-1">
        <h4 class="text-sm">Building Products</h4>
        <p class="text-muted-foreground text-sm">
          From idea → architecture → development → launch
        </p>
      </div>

      <div>
        <h4 class="text-sm font-mono text-muted-foreground mb-4">FOCUS</h4>
        <div class="flex flex-wrap gap-2">
          {techStacks.map((stack) => <Capsule>{stack}</Capsule>)}
        </div>
      </div>
    </div>
  </div>
</section>
