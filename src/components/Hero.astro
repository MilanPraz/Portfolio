---
import { Icon } from 'astro-icon/components';
import Capsule from './home/Capsule.astro';
import Link from './home/Link.astro';
import TooltipWrapper from './home/TooltipWrapper.astro';

const techStacks = [
  'Full-Stack Development',
  'Nextjs / Typescript',
  'Golang / Node.js',
  'PostgreSQL',
  'API Design & Development',
  'Deployment & CI/CD',
  'Cloud & Devops',
];
---

<section class="h-dvh flex items-center justify-center">
  <div class="max-w-3xl mx-auto grid-cols-1 lg:grid-cols-12 grid">
    <div class="w-full lg:col-span-7 space-y-6 sm:space-y-8">
      <div class="space-y-2">
        <h6
          class="whitespace-nowrap text-sm text-muted-foreground tracking-wide font-mono"
        >
          SOFTWARE DEVELOPER / 2026
        </h6>

        <h2 class="text-muted-foreground text-6xl whitespace-nowrap">
          <span class="text-foreground"> Milan </span>
          Praz
        </h2>
      </div>
      <p class="text-xl text-muted-foreground">
        Software Developer building fast and scalable digital products using
        <span class="text-foreground"> Next.js </span>
        ,
        <span class="text-foreground"> TypeScript </span>
        ,
        <span class="text-foreground"> Node.js </span>
        ,and
        <span class="text-foreground"> PostgreSQL </span>

        <a class="underline text-sm">Learn more about me.</a>
      </p>

      <!-- Hire me -->
      <div class="flex items-center gap-2 text-xs text-muted-foreground">
        <div class="flex items-center gap-1">
          <div class="h-2 w-2 bg-green-700 animate-pulse rounded-full"></div>
          <p>Software Developer for Hire</p>
        </div>
        <p>Nepal</p>
      </div>

      <!-- resume / projects /read blogs -->

      <div class="flex items-center gap-4">
        <TooltipWrapper label="resume">
          <Link href="/resume" variant="primary">
            <Icon name="doc" size={18} />
            resume
          </Link>
        </TooltipWrapper>

        <TooltipWrapper label="projects">
          <Link href="/projects" variant="secondary">
            <Icon name="gi" size={18} class={'text-white fill-white'} />
            projects</Link
          >
        </TooltipWrapper>

        <TooltipWrapper label="read blogs">
          <Link href="/blog" variant="stone">
            <Icon name="blogs" size={18} />
            read blogs</Link
          >
        </TooltipWrapper>
      </div>
    </div>

    <div class="col-span-5 grid place-items-end gap-4 sm:gap-0 mt-8 sm:mt-0">
      <h3 class="text-sm font-mono text-muted-foreground text-start w-full">
        WHAT I DO
      </h3>

      <div class="space-y-2 grid place-items-start w-full">
        <h4 class="text-sm">Building Products</h4>
        <p class="text-muted-foreground text-sm">
          From idea → architecture → development → launch
        </p>
      </div>

      <div>
        <h4 class="text-sm font-mono text-muted-foreground mb-4">FOCUS</h4>
        <div class="flex flex-wrap gap-2">
          {techStacks.map((stack) => <Capsule>{stack}</Capsule>)}
        </div>
      </div>
    </div>
  </div>
</section>
