---
import Capsule from './home/Capsule.astro';

interface ContactItem {
  label: string;
  value: string;
  href?: string;
}

interface Props {
  intro: string;
  email: string;
  contacts: ContactItem[];
}

const { intro, email, contacts } = Astro.props;
---

<section class="w-full rounded-2xl">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
    <!-- Left content -->
    <div class="space-y-6">
      <p class="text-muted-foreground text-lg leading-relaxed max-w-md">
        {intro}
      </p>

      <a
        href={`mailto:${email}`}
        class="inline-flex items-center gap-2 text-foreground text-lg
               hover:underline"
      >
        {email}
        <span class="transition-transform group-hover:translate-x-1">â†’</span>
      </a>
    </div>

    <!-- Right cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {
        contacts.map((item) => (
          <Capsule
            link={item.href ?? '#'}
            className="group rounded-xl border border-border bg-background p-4 transition-all duration-300 hover:bg-muted/40 hover:border-muted-foreground/40"
          >
            <p class="text-sm text-foreground font-medium">{item.label}</p>
            <p class="text-sm text-muted-foreground mt-1">{item.value}</p>
          </Capsule>
          //   <a
          //     href={item.href ?? '#'}
          //     target="_blank"
          //     class="group rounded-xl border border-border
          //          bg-background p-4
          //          transition-all duration-300
          //          hover:bg-muted/40 hover:border-muted-foreground/40"
          //   >
          //     <p class="text-sm text-foreground font-medium">{item.label}</p>
          //     <p class="text-sm text-muted-foreground mt-1">{item.value}</p>
          //   </a>
        ))
      }
    </div>
  </div>
</section>
